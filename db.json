{
  "actions": [
    {
      "name": "LeadToOpportunity",
      "page": "leadDetail",
      "label": "Convert a lead to an opporutnity",
      "object": "Lead"
    },
    {
      "name": "CreateContact",
      "page": "accountDetail",
      "label": "Create Contact for Account",
      "object": "Account"
    },
    {
      "name": "RejectLead",
      "page": "leadDetail",
      "label": "Reject a lead",
      "object": "Lead",
      "visibility": {
         "condition": "StatusCode=='UNQUALIFIED'"
      },
      "api": {
		"rest": {
			"href": "crmRestApi/resources/latest/leads/",
			"method": "POST",
			"content-type": "application/vnd.oracle.adf.action+json",
			"requestPayload": [{
					"name": "leadId",
					"value": "leads.LeadId",
					"mandatory": true
				},
				{
					"name": "AssignmentStatusCode",
					"value": "REJECTED",
					"mandatory": true
				},
				{
					"name": "RejectReasonCode",
					"value": "$ReasonCode",
					"mandatory": true
				},
				{
					"name": "RejectComment",
					"value": "$RejectComment",
					"mandatory": true
				},
				{
					"name": "LeadAcceptedFlag",
					"value": "N",
					"mandatory": true
				},
				{
					"name": "RejectByUserId",
					"value": "$$UserId",
					"mandatory": true
				},
				{
					"OwnerId": "OwnerId",
					"value": "$$OwnerId",
					"mandatory": true
				}
			]
		},
		"userInput": [{
				"name": "$ReasonCode",
				"displayLabel": "Reason Code",
				"attribute": "leads.RejectReasonCode",
				"type": "String",
				"validValues": {
					"href": "crmRestApi/resources/latest/reasonCode/",
					"method": "POST"
				}
			},
			{
				"name": "$RejectComment",
				"displayLabel": "Reject Comment",
				"attribute": "leads.RejectComment",
				"type": "String"
			}
		]}
    }
  ]
}
