{
  "actions": [
    {
      "name": "LeadToOpportunity",
      "page": "leadDetail",
      "label": "Convert a lead to an opporutnity",
      "object": "Lead"
    },
    {
      "name": "CreateContact",
      "page": "accountDetail",
      "label": "Create Contact for Account",
      "object": "Account"
    },
    {
      "name": "RejectLead",
      "page": "leadDetail",
      "label": "Reject a lead",
      "object": "Lead",
      "visibility": {
         "condition": "StatusCode=='UNQUALIFIED'"
      },
      "api": {
        "rest": {
          "URI": "crmRestApi/resources/latest/leads/",
          "method": "POST",
          "payload": {
            "leadId": "leads.LeadId",
            "AssignmentStatusCode": "REJECTED",
            "RejectReasonCode": "$ReasonCode",
            "RejectComment": "$RejectComment",
            "LeadAcceptedFlag": "N",
            "RejectByUserId": "$$UserId",
            "OwnerId": "$$OwnerId"
          }
        },
        "userInput": [
          {
            "name": "ReasonCode",
            "description": "This is reason code",
            "type": "String",
            "validValues": {
              "URI": "crmRestApi/resources/latest/reasonCode/"
            }
          },
          {
            "name": "RejectComment",
            "description": "This is reject comment",
            "type": "String"
          }
        ]
      }
    }
  ]
}
